{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*"]
    },
    "types": ["node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 